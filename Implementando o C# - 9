        static void Main(string[] args)
        {
            double mediaidade = 0, porcentagem = 0, somaidade = 0, somacontador = 0, idade1 = 0, idade2 = 0, vezes = 800;
            double mediaalturafem = 0, idadefem = 0, alturafem = 0, contador18_35fem = 0, vezesfem = 0;
            double mediaidademasc = 0, idademasc = 0, alturamasc = 0, contador18_35masc = 0, vezesmasc = 0;
            string feminino = "0", masculino = "1", sexo;

            for (int i=0; i<800; i++)
            {
                Console.Write("\nINFORME O SEXO, SENDO -> 0 PARA FEMININO E 1 PARA MASCULINO: ");
                sexo = Console.ReadLine();                                             

                if (sexo == feminino)
                {
                    SexoFeminino(ref mediaalturafem, ref contador18_35fem, ref idadefem, ref alturafem, ref vezesfem, ref idade1);
                }

                if (sexo == masculino)
                {
                    SexoMasculino (ref mediaidademasc, ref contador18_35masc, ref idademasc, ref alturamasc, ref vezesmasc, ref idade2);
                }
            }

            MédiaGeral(ref mediaidade, ref idadefem, ref idademasc, ref vezes, ref somaidade, ref idade1, ref idade2);
            Console.WriteLine("\n\nMÉDIA IDADE GERAL: {0}", mediaidade);
            Console.WriteLine("MÉDIA ALTURA DAS MULHERES: {0}", mediaalturafem);          
            Console.WriteLine("MÉDIA IDADE DOS HOMENS: {0}", mediaidademasc);
            Percentual(ref porcentagem, ref somacontador, ref contador18_35fem, ref contador18_35masc);
            Console.WriteLine("PERCENTUAL DE PESSOAS COM IDADE ENTRE 18 E 35 ANOS: " + porcentagem + "%");

            Console.ReadKey();
        }

        static void SexoFeminino (ref double mediaalturafem, ref double contador18_35fem, ref double alturafem, ref double idadefem, ref double vezesfem, ref double idade1)
        {            
            Console.Write("INFORME A SUA ALTURA: ");
            alturafem += double.Parse(Console.ReadLine());
            vezesfem++;
            mediaalturafem = alturafem / vezesfem;

            Console.Write("INFORME A SUA IDADE: ");
            idadefem += double.Parse(Console.ReadLine());

            if (idadefem > 17 && idadefem < 36)
            {
                contador18_35fem += 1;
            }

            idade1 += ++idadefem;
        } 

        static void SexoMasculino (ref double mediaidademasc, ref double contador18_35masc, ref double alturamasc, ref double idademasc, ref double vezesmasc, ref double idade2)
        {
            Console.Write("INFORME A SUA ALTURA: ");
            alturamasc += double.Parse(Console.ReadLine());

            
            Console.Write("INFORME A SUA IDADE: ");
            idademasc += double.Parse(Console.ReadLine());
            vezesmasc++;
            mediaidademasc = idademasc / vezesmasc;

            if (idademasc > 17 && idademasc < 36)
            {
                contador18_35masc += 1;
            }

            idade2 += ++idademasc;
        }        

        static void MédiaGeral (ref double mediaidade, ref double somaidade, ref double idadefem, ref double idademasc, ref double vezes, ref double idade1, ref double idade2)
        {
            somaidade = idade1 + idade2;
            mediaidade = somaidade / vezes;
        }

        static void Percentual (ref double porcentagem, ref double somacontador, ref double contador18_35fem, ref double contador18_35masc)
        {
            somacontador = contador18_35fem + contador18_35masc;
            porcentagem = somacontador / 100;
        }
            idade1 += ++idadefem;
        } 

        static void SexoMasculino (ref double mediaidademasc, ref double contador18_35masc, ref double alturamasc, ref double idademasc, ref double vezesmasc, ref double idade2)
        {
            Console.Write("INFORME A SUA ALTURA: ");
            alturamasc += double.Parse(Console.ReadLine());

            
            Console.Write("INFORME A SUA IDADE: ");
            idademasc += double.Parse(Console.ReadLine());
            vezesmasc++;
            mediaidademasc = idademasc / vezesmasc;

            if (idademasc > 17 && idademasc < 36)
            {
                contador18_35masc += 1;
            }

            idade2 += ++idademasc;
        }        

        static void MédiaGeral (ref double mediaidade, ref double somaidade, ref double idadefem, ref double idademasc, ref double vezes, ref double idade1, ref double idade2)
        {
            somaidade = idade1 + idade2;
            mediaidade = somaidade / vezes;
        }

        static void Percentual (ref double porcentagem, ref double somacontador, ref double contador18_35fem, ref double contador18_35masc)
        {
            somacontador = contador18_35fem + contador18_35masc;
            porcentagem = somacontador / 100;
        }
