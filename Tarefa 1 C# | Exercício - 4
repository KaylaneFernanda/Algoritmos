       static void Main(string[] args)
        {
            double np1, np2, np3;
            double peso_np1 = 2, peso_np2 = 4, peso_np3 = 6;
            Console.WriteLine("------- CALCULANDO A MÉDIA DO ALUNO -------");            
            Console.Write("INFORME A NOTA DA PRIMEIRA PROVA: ");
            np1 = double.Parse(Console.ReadLine());
            Console.Write("INFORME A NOTA DA SEGUNDA PROVA: ");
            np2 = double.Parse(Console.ReadLine());
            Console.Write("INFORME A NOTA DA TERCEIRA PROVA: ");
            np3 = double.Parse(Console.ReadLine());

            double pesos = peso_np1 + peso_np2 + peso_np3;
            double notas = np1 * peso_np1 + np2 * peso_np2 + np3 * peso_np3;

            double media = notas / pesos;

            Console.WriteLine("MÉDIA FINAL DO ALUNO É: {0}", media);
            Console.ReadKey();

        }
